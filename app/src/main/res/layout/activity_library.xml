<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".SOE"
android:background="@drawable/nidula">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#008080"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Library"
            android:textColor="#fff"
            android:textSize="35dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/d13"/>

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Library is very useful place to both students and lectures.Large number of books in here.All books have catogarized. There are study materials for all sort of subjects in our library. It is opened at 8.00am to 5.00pm in all days."
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="881dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:srcCompat="@drawable/d15" />
    </LinearLayout>
</ScrollView>
</RelativeLayout>