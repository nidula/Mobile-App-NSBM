<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin"
    android:background="@drawable/nidula">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#008080"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Addministration"
                android:textColor="#fff"
                android:textSize="35dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="305dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/d2" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="266dp"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#000"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:layout_marginRight="10dp"
                android:text="Administration is the main place of NSBM Green University. There are lot of sub
offices have placed in Administration.Examination Department, Finance Department, VC Sir Office, IT devision
are some of them. Administration office is used to academic and non academic incidents by university students.
" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>