<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bookshop"
    android:background="@drawable/nidula">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView37"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#008080"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Book Mart"
                android:textColor="#fff"
                android:textSize="35dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:srcCompat="@drawable/book1"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/textView38"
                android:layout_width="match_parent"
                android:layout_height="266dp"
                android:text="It has all the stationary items such as books, files, erasers, pens and so on. It also have the facility to get photocopies, printouts, faxes. Book shop is at the ground floor of the Student centre."
                android:textColor="#000000"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="15dp"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>