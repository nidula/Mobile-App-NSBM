<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Map"
    android:background="@drawable/nidula">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#008080"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="University Map"
                android:textColor="#fff"
                android:textSize="35dp"
                android:textStyle="bold"  />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="100dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/round_button_maim"
                android:shadowColor="#00D1B6B6"
                android:text="Location Of University"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Maps inside the faculties"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="35dp"
                android:gravity="center"
                android:layout_marginTop="50dp"/>

            <Button
                android:id="@+id/button10"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="42dp"
                android:background="@drawable/round_button_maim"
                android:shadowColor="#00B19999"
                android:text="Block Map Of SOC"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="italic|bold" />

            <Button
                android:id="@+id/button12"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="35dp"
                android:background="@drawable/round_button_maim"
                android:shadowColor="#00DAC0C0"
                android:text="Block Map Of SOB"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="italic|bold" />

            <Button
                android:id="@+id/button17"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/round_button_maim"
                android:shadowColor="#00BDA5A5"
                android:text="Block Map Of SOE"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="italic|bold" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>